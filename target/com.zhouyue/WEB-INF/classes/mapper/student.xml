    <!--对用户名进行增删改查-->
    <sql id="Base_Column_List">
        id,username,password
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
      INSERT INTO student(username,password) VALUES(#{username},#{password})
    </insert>

    <insert id="insertSelective">

    </insert>

    <select id="selectById">
        SELECT  * FROM  student WHERE id=#{id}

    </select>

    <select id="selectByName" resultType="com.yi.du.bean.Student" parameterType="java.lang.String">
        SELECT * FROM student WHERE username=#{username}

    </select>

    <select id="selectByCondition" resultType="com.yi.du.bean.Student" parameterType="com.yi.du.bean.Student">
        SELECT * FROM student
        <where>
            <if test="id != null">id=#{id}</if>
            <if test="username != null"> AND username=#{username}</if>
            <if test="password != null"> AND password=#{password}</if>

        </where>
    </select>



